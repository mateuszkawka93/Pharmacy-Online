@model Pharmacy_Online.Models.Order
@{
    ViewBag.Title = "Purchase";
    Layout = "~/Views/Shared/_RightSectionLayout.cshtml";
}

@section SectionTitle
{
    Uzupełnij dane zamówienia
}


<hr/>
    
        @using (Html.BeginForm("Purchase", "Cart"))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
            <div class="form-group">
                @Html.LabelFor(m => m.Name, "Imię:", new { @class = "col-md-2 control-label" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
            </div>
                </div>
                <div class="row">
            <div class="form-group">
                @Html.LabelFor(m => m.Surname, "Nazwisko: ", new { @class = "col-md-2 control-label" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Surname, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Surname, "", new { @class = "text-danger" })
                </div>
            </div>
                </div>
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(m => m.Address, "Ulica i nr domu: ", new { @class = "col-md-2 control-label" })
                    <div class="col-sm-4">
                        @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(m => m.City, "Miasto: ", new { @class = "col-md-2 control-label" })
                    <div class="col-sm-4">
                        @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.City, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(m => m.PostCode, "Kod pocztowy: ", new { @class = "col-md-2 control-label" })
                    <div class="col-sm-2">
                        @Html.TextBoxFor(m => m.PostCode, new { @class = "form-control", placeholder = "xx-xxx" })
                        @Html.ValidationMessageFor(m => m.PostCode, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(m => m.Phone, "Telefon: ", new { @class = "col-md-2 control-label" })
                    <div class="col-sm-4">
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, "Email: ", new { @class = "col-md-2 control-label" })
                    <div class="col-sm-4">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        <div>
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>

                    </div>
                </div>
            </div>
               
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(m => m.Comment, "Komentarz: ", new { @class = "col-md-2 control-label" })
                    <div class="col-sm-4">
                        @Html.TextArea("Comment", Model.Comment, new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(m => m.Delivery, "Rodzaj dostawy: ", new { @class = "col-md-2 control-label" })
                    <div class="col-sm-4">
                     @Html.EnumDropDownListFor(o =>o.Delivery, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <hr/>
            <div class="row">
                <input type="submit" class="btn btn-default" role="button" value="Potwierdź zamówienie" />
                <a href="@Url.Action("Index", "Cart")" class="btn btn-default" role="button">Wróć do koszyka</a>
            </div>
        }
   
  

